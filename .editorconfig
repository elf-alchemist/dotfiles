root = true

[*]
charset                  = utf-8
indent_style             = tab
indent_size              = tab
tab_width                = 4
end_of_line              = lf
insert_final_newline     = true
trim_trailing_whitespace = true

[*.{sh,bash}]
indent_style       = space
indent_size        = 2
tab_width          = 2
shell_variant      = bash
binary_next_line   = true
switch_case_indent = true
space_redirects    = true
keep_padding       = true
function_next_line = true

